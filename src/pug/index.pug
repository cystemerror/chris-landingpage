            .container
                .row
                    // Footer Location
                    .col-lg-4.mb-5.mb-lg-0
                        h4.text-uppercase.mb-4 
                        p.lead.mb-0
                            |
                    // Footer Social Icons
                    .col-lg-4.mb-5.mb-lg-0
                        h4.text-uppercase.mb-4 
                    // Footer About Text
                    .col-lg-4
                        h4.text-uppercase.mb-4
                        p.lead.mb-0
